<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/simple_background"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".GameActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/additionToolBarId"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue"
        android:elevation="4dp"
        app:title="ADDITION"
        app:titleTextColor="@android:color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score"
            android:textSize="16sp"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/scoreTxtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startingScore"
            android:textSize="16sp"
            android:layout_marginRight="45dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/life"
            android:textSize="16sp"
            android:layout_marginRight="45dp"/>
        <TextView
            android:id="@+id/lifeTxtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lifeRemain"
            android:textSize="16sp"
            android:layout_marginRight="45dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textSize="16sp"
            android:layout_marginRight="45dp"/>
        <TextView
            android:id="@+id/timeTxtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timeLeft"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/questionTxtId"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:background="@color/blue"
        android:gravity="center"
        android:text="Text"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/answerEdTxtId"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:background="@color/blue"
        android:gravity="center"
        android:hint="Write your answer"
        android:textSize="24sp"
        android:textColorHint="@color/white"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/okBtnId"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:layout_margin="10dp"
            android:text="OK"
            android:textColor="@color/blue"
            android:textSize="26sp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextBtnId"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:layout_margin="10dp"
            android:textColor="@color/blue"
            android:text="NEXT"
            android:textSize="26sp"/>
    </LinearLayout>
</LinearLayout>